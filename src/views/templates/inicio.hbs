{{> nav}}
<body>
    <div class="container p-4">
        
        <div class="row">
            <div class="col-md-8">
                <a href="http://grupovirtus.org/">
                    <img src="/images/virtus.jpg" class="card-img-top m-2">
                </a>
                <img src="/images/tic.png" class="card-img-top m-2">          
            </div>
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Iniciar Sesión</h3>                    
                    </div>
                    <div class="card-body">
                        <img src="/images/logo-virtus.png" alt="logo virtus" class="card-img-top mx-aux rounded-circle">
                        <form action="/loginUsuario" method="POST">
                            <div class="form-group">
                                <input type="text" name="username" placeholder="nombre de usuario" class="form-control" autofocus required>
                            </div>
                            <div class="form-group" mclass="form-control">
                                <input type="password" name="password" placeholder="contraseña" required>
                            </div>
                            {{> mensajesLogin}}
                            <div class="form-group">
                                <button class="primary" style='width:100%;'>Iniciar Sesion</button>
                            </div>
                            <div class="form-group">                            
                                <a href="/signup" >
                                    <input type="button" value="Registrarse" class="form-control">
                                </a>                            
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
{{> footer}}